[pybind11]
source = gh://pybind/pybind11
collapse = True
rev = master
destination:
    mkdir bindings/python/pybind11
    mv LICENSE bindings/python/pybind11
    mv include bindings/python/pybind11
    mv CMakeLists.txt bindings/python/pybind11
    mkdir bindings/python/pybind11/tools
    mv glob:tools/*.cmake bindings/python/pybind11/tools
